{
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "extends": "airbnb",
    "globals": {
        "log": true,
        "reactCookie": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "rules": {
        "arrow-body-style": 0,
        "brace-style": [
            1, "allman"
        ],
        "comma-dangle": 0,
        "consistent-return": 0,
        "global-require": 0,
        "import/no-dynamic-require": 0,
        "import/no-extraneous-dependencies": 0,
        "import/prefer-default-export": 0,
        "indent": [
            2,
            4, {
                "SwitchCase": 1
            }
        ],
        "max-len": [
            1,
            240,
            2, {
                "ignoreComments": true
            }
        ],
        "no-case-declarations": 0,
        "no-else-return": 0,
        "no-extraneous-dependencies": 0,
        "no-param-reassign": 0,
        "no-restricted-syntax": 0,
        "no-tabs": 0,
        "no-unneeded-ternary": 0,
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": [
            1, {
                "extensions": [".js", ".jsx"]
            }
        ],
        "react/jsx-indent": [
            2, 4
        ],
        "react/jsx-indent-props": [
            2, "tab"
        ],
        "semi": [2, "always"]
    }
}
